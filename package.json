{
  "name": "@vatsim-uk/consilio",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "build": "vue-cli-service build",
    "playground": "vue-cli-service serve",
    "test:unit": "vue-cli-service test:unit --coverage",
    "lint": "vue-cli-service lint",
    "build:lib": "vue-cli-service build --target lib --name consilio src/main.ts"
  },
  "main": "./dist/consilio.common.js",
  "dependencies": {
    "autoprefixer": "latest",
    "core-js": "^3.3.2",
    "node-sass": "^4.13.0",
    "postcss": "^7.0.21",
    "sass-loader": "^8.0.0",
    "tailwindcss": "^1.1.3",
    "vue": "^2.6.10"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@vue/cli-plugin-babel": "^4.0.0",
    "@vue/cli-plugin-eslint": "^4.0.0",
    "@vue/cli-plugin-typescript": "^4.0.5",
    "@vue/cli-plugin-unit-jest": "^4.0.5",
    "@vue/cli-service": "^4.0.0",
    "@vue/eslint-config-typescript": "^4.0.0",
    "@vue/test-utils": "1.0.0-beta.29",
    "babel-eslint": "^10.0.3",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "postcss-loader": "^3.0.0",
    "typescript": "~3.5.3",
    "vue-template-compiler": "^2.6.10"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended",
      "@vue/typescript"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "@typescript-eslint/parser"
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "files": [  "dist/*",  "src/*",  "public/*",  "*.json",  "*.js"],
  "postcss": {
    "plugins": {
      "autoprefixer": {},
      "tailwindcss": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
